{
	// tsconfig 所在的根目录, 则是一个project
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		// 生成的目标格式
		"target": "ES5",
		// 目标目录
		"outDir": "dist",
		// 
		"types": [
			"webpack-env",
			"vuetify",
			"jquery"
		],
		// 给错误和消息设置样式，使用颜色和上下文。
		"pretty": true,
		// 编译需要包含的库
		"lib": [
			"dom",
		],
		// 列出编译后生成文件的名字
		"listEmittedFiles": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"*.js"
	]
}